layout: layouts/home.njk
eleventyNavigation:
  key: Contact
  order: 4
---
<div class="container">
	<div class="row">
		<div class="col-12 mx-auto">
			<h2 class="text-center">Contact Form</h2>
		</div>
	</div>
</div>

<div class="row">
  <div class="mx-auto col-10 col-md-8 col-lg-6">

        <form class="" name="contact" netlify>
            <div class="form-group row">
                <label>First Name <input class="form-control" type="text" name="first-name" /></label>
            </div>
            <div class="form-group row mt-3">
                <label>Surname <input class="form-control" type="text" name="surname" /></label>
            </div>
            <div class="form-group row mt-3">
                <label>Email <input class="form-control" type="email" name="email" /></label>
            </div>
            <div class="form-group row mt-3">
                <label class="text-left">Message <textarea class="form-control" name="message" rows=4></textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </div>
        </form>
  </div>
</div>